<div class="mat-layout-grid" style="max-width: 800px">
    <div class="mat-layout-grid-inner">

        <div class="mat-layout-grid-cell mat-layout-grid-cell-span-3 item">
            <div class="item-illustration">Illustration</div>
        </div>

        <div class="mat-layout-grid-cell mat-layout-grid-cell-span-3 item">
            <div class="item-content">
                @ItemName <br />
                $@BudgetValue Proposed
            </div>

            <div class="item-percent">
                @percent% from last year
            </div>
        </div>

    </div>
</div>

<style>
    .item {
        width: 200px;
        height: 200px;
        background-color: #accce7;
    }

    .item-content {
        text-align: center;
    }

    .item-percent {
        text-align: center;
        vertical-align: text-bottom;
        font-size: 15px;
    }

    .item-illustration {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
</style>


@code {

    [Parameter]
    public string ItemName { get; set; }

    [Parameter]
    public float ItemValue { get; set; }

    [Parameter]
    public float BudgetValue { get; set; }

    [Parameter]
    public float percent { get; set; }

    [Parameter]
    public bool Active { get; set; }

    [Parameter]
    public string SelectionType { get; set; }

    string color;

    string defaultColor = "#accce7";
    string activeColor = "#86abca";

    protected override void OnInitialized()
    {
        if(Active)
        {
            color = activeColor;
        }
        else
        {
            color = defaultColor;
        }
    }
}
