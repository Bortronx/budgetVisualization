<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <div class="mat-layout-grid-cell" style="background-color: @color; width: @width; height: @height">
            <div>@ItemName</div> <br/>
            $@BudgetValue Proposed <br/>
            @percent% from last year
            @if (Active)
            {
                <div>Active Selection</div>
            }
        </div>
    </div>
</div>

<style>
    .cell {
        width: 800px;
        height: 800px;
        background-color: #e8f0f6;
    }
</style>


@code {

    [Parameter]
    public string ItemName { get; set; }

    [Parameter]
    public float ItemValue { get; set; }

    [Parameter]
    public float BudgetValue { get; set; }

    [Parameter]
    public float percent { get; set; }

    [Parameter]
    public bool Active { get; set; }

    [Parameter]
    public string SelectionType { get; set; }

    string color;
    string width = "200px";
    string height = "200px";

    protected override void OnInitialized()
    {
        if(Active)
        {
            color = "#86abca";
        }
        else
        {
            color = "#accce7";
        }
    }
}
